  }

  .form1 {
    width: 400px;
    margin: auto;
    display: flex;
    flex-direction: column;
    margin-bottom: 20px;
    gap: 5px;
  }
  .form2 {
    width: 400px;
    margin: auto;
  }
  select {
    padding: 8px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  button[type="submit"] {
    background-color: #0074d9;
    color: #fff;
    border: none;
    border-radius: 4px;
    padding: 8px 16px;
    cursor: pointer;
  }

  input[type="text"] {
    padding: 8px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
</style>
