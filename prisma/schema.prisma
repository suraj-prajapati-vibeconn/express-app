generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
  // output   = "../prisma/generated/type-graphql"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user_details{
  uid Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  cars cars[]
  roles roles?
}

model cars{
  cid Int @id @default(autoincrement())
  name String
  model String
  user_details user_details @relation(fields: [uid], references: [uid])
  uid Int
}

model directors{
  did Int @id @default(autoincrement())
  name String
  companies_directors companies_directors[]
}

model companies{
  com_id Int @id @default(autoincrement())
  name String
  companydirectors companies_directors[]
}

model companies_directors{
  id Int @id @default(autoincrement())

  directors directors @relation(fields: [did], references: [did])
  did Int

  companies companies @relation(fields: [cid], references: [com_id])
  cid Int
  
}

model roles{
  user_details user_details @relation(fields: [uid], references: [uid])
  uid Int @unique
  admin Boolean
  user Boolean
}

model contact_messages{
  id Int @id @default(autoincrement())
  name String
  email String
  message String
}
